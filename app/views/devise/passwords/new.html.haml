.container
  %br
  .row
    .col-xs-6.col-xs-offset-3
      .well.well-lg.light-background
        %h2 Forgot your password?
        %br

        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f|
          = devise_error_messages!
          .form-group
            = f.label :email
            = f.email_field :email, autofocus: true, class: 'form-control'
          .form-group
            = f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg btn-block"

        = render "devise/shared/links"
