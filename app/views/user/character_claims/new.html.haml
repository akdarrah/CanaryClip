.container
  .row
    .col-xs-12.col-sm-3
      = render partial: "user/shared/menu"
    .col-xs-12.col-sm-9
      .well.well-lg.light-background
        %ol.breadcrumb
          %li= link_to "Characters", user_character_claims_path
          %li.active= t('.claim_your_character')

        %h1= t('.claim_your_character')

        = simple_form_for [:user, @character_claim] do |f|
          = f.input :character_username
          = f.button :submit, class: 'btn btn-primary'
