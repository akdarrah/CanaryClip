- content_for :head do
  :css
    #canvas-image {
      background-image: url(#{@marketing_render.file.url});
    }

.container-fluid
  .row
    %canvas#canvas-image
    .canvas-overlay
      .row.top-bar
        .container
          .row
            .col-xs-12
              .pull-left
                = link_to root_url, class: 'site-logo-link' do
                  .title.lobster
                    CanaryClip
              .pull-right
                %ul.list-inline
                  - if current_user.blank?
                    %li= link_to 'Sign In', new_user_session_url
                  %li= link_to 'Discover', schematics_path
      .container
        .row.text-center.slogan-text
          .col-xs-12
            %h1 The Minecraft Creation Community

%br
