.container
  .row
    .col-xs-12
      %h2 Discover and Share Minecraft Creations
      %p Download or share creations without leaving Minecraft.
      %br

    - @schematics.each do |schematic|
      .col-xs-12.col-sm-4
        .schematic-preview-card= link_to image_tag(schematic.primary_render.file.url, class: 'img-responsive rounded'), schematic_path(schematic)
        %br

.white-background
  .container-fluid.squared-stripe
    .row
      .container
        .row
          .col-xs-12
            %h2 Claim your Minecraft Character!
            %br

          - @characters.each do |character|
            .col-xs-6.col-sm-2.text-center
              .schematic-preview-card= link_to image_tag(character.avatar.url, class: 'img-responsive rounded'), character_path(character)
              %br

- content_for :script do
  :javascript
    $(document).ready(function(){
      var granimInstance = new Granim({
        element: '#canvas-image',
        direction: 'top-bottom',
        opacity: [1, .5, 0],
        isPausedWhenNotInView: true,
        states : {
            "default-state": {
                gradients: [
                    ['#485563', '#29323c', '#29323c'],
                    ['#00c6ff', '#0072ff', '#0072ff']
                ],
                transitionSpeed: 10000
            }
        }
      });
    });
