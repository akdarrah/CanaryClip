.container
  .row
    .col-xs-12
      .alert.alert-danger
        %p
          = fa_icon('exclamation-triangle')
          = "Unfortunately, we're not quite ready for you yet! #{fa_icon('frown-o')} <strong>Please check back soon.<strong>".html_safe
      = simple_form_for @server do |f|
        = f.input :name
        = f.input :hostname
        = f.input :description
        = f.button :submit, 'Save', class: "btn-primary", disabled: true
