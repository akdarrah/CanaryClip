!!! Strict
%html{ xmlns: 'http://www.w3.org/1999/xhtml' }
  %head
    %title Minebuild
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags
    = yield :head
    %link{href: 'https://fonts.googleapis.com/css?family=Lobster', rel: 'stylesheet', type: 'text/css'}
  %body
    .container-fluid
      .row.top-bar
        .container
          .row
            .col-xs-24
              .pull-left
                = link_to root_url, class: 'site-logo-link' do
                  .title.lobster
                    Minebuild
              .pull-right
                %ul.list-inline
                  - if current_user.blank?
                    %li= link_to 'Sign In', new_user_session_url
                  - else
                    %li= link_to 'Sign Out', destroy_user_session_url, method: :delete
                  - if current_user.present? && current_user.admin?
                    %li= link_to 'Sidekiq', sidekiq_web_url
                    %li= link_to 'Admin', admin_root_url
                  - if current_user.present?
                    - if current_character.present?
                      = image_tag(current_character.avatar.url, class: 'small-character-avatar')
                    %li= link_to 'Settings', edit_user_registration_path
                  %li= link_to 'Home', root_url
    = yield
    = render partial: "layouts/analytics"
    = javascript_include_tag "application"
    = yield :script
